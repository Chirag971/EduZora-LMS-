@model eduzora_lms.Models.Admin.ViewModels.EditCategoryRequest

@{
    Layout = "_LayoutAdmin";
}


<div class="main-content">
    <section class="section">
        <div class="section-header d-flex justify-content-between">
            <h1>Edit - Category</h1>
            <div class="ml-auto">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary"><i class="fas fa-plus"></i> View All</a>
            </div>
        </div>
        <div class="section-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-controller="Category" asp-action="Edit" method="post">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group mb-3">
                                            <label>Category Id</label>
                                            <input type="text" id="id" class="form-control" asp-for="Id" readonly>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label>Category Name</label>
                                            <input type="text" class="form-control" asp-for="CategoryName">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary" name="form_submit">Update</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

